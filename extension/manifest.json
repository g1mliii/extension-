{
  "manifest_version": 3,
  "name": "foglite",
  "version": "1.0.0",
  "description": "Community-driven URL trust rating system. Rate websites and view aggregated trust scores to make informed browsing decisions.",
  "author": "foglite Team",
  "homepage_url": "https://github.com/g1mliii/url-rater",
  "action": {
    "default_popup": "popup.html",
    "default_title": "foglite",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://*.supabase.co/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
